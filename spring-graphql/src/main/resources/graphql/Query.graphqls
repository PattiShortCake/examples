type Query {
  greeting: String!
  people: PersonConnection
  peopleByFirstName(firstName: String): [Person!]
  peopleByLastName(lastName: String): [Person!]
}

type PersonConnection {
  edges: [PersonEdge]
  pageInfo: PageInfo
}

type PersonEdge {
  cursor: String
  node: Person
}

type PageInfo {
  hasPreviousPage: Boolean!
  hasNextPage: Boolean!
}
